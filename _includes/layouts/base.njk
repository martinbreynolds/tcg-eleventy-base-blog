<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/tailwind.css' | url }}">
     <link rel="stylesheet" href="{{ '/css/style.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <script src="https://kit.fontawesome.com/4307d0a618.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </head>
  <body>

<header class=" tw-pb-4 tw-h-auto" >
  
{% include './nav.njk' %}


</header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>

      {{ content | safe }}
    </main>

        <footer class="tw-bg-pink-900 tw-text-gray-50 tw-h-96">
         <img src="./img/logowhitem.png" alt="logo image" width="200" class="tw-text-center tw-align-middle tw-p-3 tw-mx-auto">

      {# Links in a Row #}

      <div class="container">
        <div class="tw-flex tw-flex-wrap tw-flex-col md:tw-flex-row tw-justify-around tw-uppercase">
            {%- for entry in collections.all | eleventyNavigation %}
              
                <div class="tw-w-full tw-px-4 sm:tw-flex-1">
                  <span class="tw-text-center tw-text-lg tw-block tw-my-4">
                    <a href="{{ entry.url | url }}">{{ entry.title }}</a>
                  </span>
                </div>
            {%- endfor %}
        </div>

      {# Social Icons #}
        <div class="tw-py-5 tw-flex tw-w-1/3 tw-mx-auto tw-flex-wrap tw-flex-col md:tw-flex-row tw-text-center tw-justify-around ">
          {% for social in settings.socials %}     
              <i class="tw-border-pink-50 tw-border-solid tw-border-2 tw-rounded-2xl tw-p-3 fa fa-{{ social.name }} fa-lg"></i>
          {%- endfor %}
         </div>
       
        <p class="tw-text-white tw-text-center tw-py-3">
          Â© .<span class="brandName"> martinbreynolds</span>
          <span class="brandPeriod">.</span>
          <span class="brandDomain">dev</span>
        </p>
      </div>
    </footer>

    <!-- Current page: {{ page.url | url }} -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
    <script>
  if (window.netlifyIdentity) {
    window.netlifyIdentity.on("init", user => {
      if (!user) {
        window.netlifyIdentity.on("login", () => {
          document.location.href = "/admin/";
        });
      }
    });
  }
</script>
  </body>
</html>
