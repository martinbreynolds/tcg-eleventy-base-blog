<footer class="tw-bg-cyan-900 tw-text-gray-50 tw-h-96">
  <img
    src="./img/logowhitem.png"
    alt="logo image"
    width="200"
    class="tw-text-center tw-align-middle tw-p-3 tw-mx-auto"
  />

  {# Links in a Row #}

  <div class="container">
    <div
      class="tw-flex tw-flex-wrap tw-flex-col md:tw-flex-row tw-justify-around tw-uppercase"
    >
      {%- for entry in collections.all | eleventyNavigation %}

      <div class="tw-w-full tw-px-4 sm:tw-flex-1">
        <span class="tw-text-center tw-text-lg tw-block tw-my-4">
          <a href="{{ entry.url | url }}">{{ entry.title }}</a>
        </span>
      </div>
      {%- endfor %}
    </div>

    {# Social Icons #}
    <div
      class="tw-py-5 tw-flex tw-w-1/3 tw-mx-auto tw-flex-wrap tw-flex-col md:tw-flex-row tw-text-center tw-justify-around"
    >
      {% for social in settings.socials %}
      <i
        class="tw-border-pink-50 tw-border-solid tw-border-2 tw-rounded-2xl tw-p-3 fa fa-{{
          social.name
        }} fa-lg"
      ></i>
      {%- endfor %}
    </div>

    <p class="tw-text-white tw-text-center tw-py-3">
      Â© .<span class="brandName"> martinbreynolds</span>
      <span class="brandPeriod">.</span>
      <span class="brandDomain">dev</span>
    </p>
  </div>
</footer>
