<ol reversed class="postlist" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">

  <div class="container">

    <div class="row mb-3">

      {% for post in postslist | reverse %}

        <div class="col-md-4 mb-4">

          <div class="card h-100">

            {% if post.data.image %}
              <a href="{{ post.url | url }}">
                <img src="{{ post.data.image }}" class="card-img-top img-fluid img-size" alt="{{ post.data.title }}">
              </a>
            {% else %}
                <img src="../img/logo.png" class="card-img-top img-fluid img-size" alt="{{ post.data.title }}">
            {% endif %}
          
            <div class="card-body">

              <p class="card-text"><time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time></p>

              <h3 class="card-title">{% if post.data.title %}{{ post.data.title }}{% else %}{% endif %}</h3>
              
              <p class="card-text">{{ post.data.description }}</p>
              
              
              <button href="{{ post.url | url }}" type="button" class="btn btn-secondary"><a class="text-light" href="{{ post.url | url }}">Read More</a></button>
              
              <p>{% for tag in post.data.tags %}
                
                {%- if collections.tagList.indexOf(tag) != -1 -%}
                {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                <a href="{{ tagUrl | url }}" class="badge rounded-pill bg-danger post-tag mt-3 mb-3 p-1">{{ tag }}</a>
                {%- endif -%}

              {% endfor %}</p>

            </div>
          
          </div>

        </div>
    
      {% endfor %}

    </div>

  </div>

</ol>