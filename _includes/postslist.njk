<ol
  reversed
  class="postlist"
  style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}"
>
  <div class="tw-container tw-p-3 tw-mx-auto">
    <div
      class="tw-grid tw-w-full lg:tw-grid-cols-3 tw-grid-cols-1 tw-gap-4 tw-mb-3"
    >
      {% for post in postslist | reverse %} {% include
      './layouts/components/card.njk' %} {% endfor %}
    </div>
  </div>
</ol>
